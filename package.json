{
  "name": "lyric-js",
  "version": "0.1.0",
  "description": "A strict TypeScript framework for generating diagrams from text",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm -r --parallel build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "diagram",
    "flowchart",
    "visualization",
    "mermaid",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/node": "^24.9.2",
    "puppeteer": "^24.28.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.6",
    "zod": "^4.1.12"
  },
  "dependencies": {
    "@types/dagre": "^0.7.53",
    "dagre": "^0.8.5"
  }
}
