{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ES2022", "DOM"],
    "paths": {
      "@typermaid/core": ["../core/src"],
      "@typermaid/parser": ["../parser/src"],
      "@typermaid/renderer-core": ["../renderer-core/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "../core" }, { "path": "../parser" }, { "path": "../renderer-core" }]
}
