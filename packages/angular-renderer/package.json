{
  "name": "@lyric-js/angular-renderer",
  "version": "0.1.0",
  "description": "Angular renderer for Lyric-JS mermaid diagrams",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.lib.json",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "peerDependencies": {
    "@angular/common": "^18.0.0",
    "@angular/core": "^18.0.0"
  },
  "dependencies": {
    "@lyric-js/core": "workspace:*",
    "@lyric-js/parser": "workspace:*",
    "@lyric-js/renderer-core": "workspace:*",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/common": "^18.2.13",
    "@angular/core": "^18.2.13",
    "typescript": "~5.5.0"
  },
  "keywords": [
    "angular",
    "mermaid",
    "diagram",
    "flowchart",
    "renderer",
    "typescript"
  ],
  "author": "",
  "license": "MIT"
}
