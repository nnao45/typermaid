{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@typermaid/core": ["../core/dist"],
      "@typermaid/builders": ["../builders/dist"],
      "@typermaid/codegen": ["../codegen/dist"],
      "@typermaid/ast-tools": ["../ast-tools/dist"]
    },

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "composite": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.test.ts", 
    "**/*.spec.ts",
    "src/ast/enhanced-class.ts",
    "src/ast/enhanced-er.ts", 
    "src/ast/enhanced-gantt.ts",
    "src/ast/enhanced-sequence.ts",
    "src/ast/enhanced-state.ts"
  ],
  "references": [{ "path": "../core" }]
}
